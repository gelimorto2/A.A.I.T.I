# Environment Configuration for A.A.I.T.I Backend

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration
DATABASE_URL=sqlite3://./database/aaiti.sqlite
DB_CLIENT=sqlite3

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key_here

# API Keys (Required for Production)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Twilio Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/combined.log
ERROR_LOG_FILE=./logs/error.log

# ML Model Configuration
ML_MODEL_PATH=./models/production
ML_TRAINING_DATA_PATH=./data/training
ML_PREDICTION_THRESHOLD=0.75
ML_RETRAIN_INTERVAL=86400000

# Trading Configuration
MAX_POSITION_SIZE=0.1
RISK_MANAGEMENT_ENABLED=true
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.05

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090